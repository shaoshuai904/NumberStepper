<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stepper="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.maple.numberstepper.NumberStepper
            android:id="@+id/stepper"
            android:layout_width="120dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.maple.numberstepper.NumberStepper
            android:id="@+id/stepperCustom"
            android:layout_width="150dp"
            android:layout_height="40dp"
            stepper:max="200"
            stepper:min="50"
            stepper:mode="custom"
            stepper:step="5"
            stepper:text="Move Me"
            stepper:value="100" />

        <TextView
            android:id="@+id/tvValueCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp" />
    </LinearLayout>

    <com.maple.numberstepper.NumberStepper
        android:id="@+id/stepperCustom2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        stepper:max="200"
        stepper:min="50"
        stepper:step="5"
        stepper:stepper_background="@color/stepper_button_def"
        stepper:stepper_contentBackground="@color/stepper_content_bg"
        stepper:stepper_contentTextColor="#0099ff"
        stepper:stepper_contentTextSize="18"
        stepper:stepper_leftButtonBackground="@drawable/sel_custom_button_bg"
        stepper:stepper_leftButtonResources="@drawable/svg_left"
        stepper:stepper_rightButtonBackground="@drawable/sel_custom_button_bg"
        stepper:stepper_rightButtonResources="@drawable/svg_right"
        stepper:value="100" />

</LinearLayout>